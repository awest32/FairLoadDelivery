! ========================================================================
! SIMPLE SINGLE-PHASE NETWORK WITH INSUFFICIENT GENERATION
! ========================================================================

! Very weak voltage source (essentially negligible contribution)
New Circuit.Insufficient_Gen
~ basekv=0.4 pu=1.0 phases=1 MVAsc1=0.01

! ========================================================================
! SINGLE GENERATOR - TOTAL CAPACITY: 105 kVA
! ========================================================================

New Generator.Gen1 bus1=Primary.1 phases=1 kV=0.4 
~ kW=50 kvar=105 
~ kVA=55             ! Hard capacity limit
~ Xdp=0.3
~ model=1 status=fixed
~ Vminpu=0.9 Vmaxpu=1.1

! ========================================================================
! LINE CODES
! ========================================================================

New linecode.Main nphases=1 basefreq=50
~ rmatrix=(0.08)
~ xmatrix=(0.047)
~ cmatrix=(50.93)

! ========================================================================
! NETWORK TOPOLOGY
! ========================================================================

! Weak connection from source to generator bus
New Line.SlackLine bus1=sourcebus.1 bus2=Primary.1 
~ linecode=Main length=100 R1=100 X1=100  ! Very high impedance

! Switches to load buses
New Line.Switch1 bus1=Primary.1 bus2=BusA.1 
~ linecode=Main length=0.5 switch=yes enabled=yes

New Line.Switch2 bus1=Primary.1 bus2=BusB.1 
~ linecode=Main length=0.5 switch=yes enabled=yes

New Line.Switch3 bus1=BusA.1 bus2=BusB.1 
~ linecode=Main length=0.5 switch=yes enabled=yes

! ========================================================================
! LOADS - TOTAL: 62 kW
! ========================================================================

! Bus A - 50 kW
New Load.L1 phases=1 bus1=BusA.1.0 kV=0.4 kW=50 kvar=15 model=1

! Bus B - 12 kW
New Load.L4 phases=1 bus1=BusB.1.0 kV=0.4 kW=12 kvar=4 model=1

! ========================================================================
! SUMMARY
! ========================================================================
! Total Load:       62 kW
! Total Generation: 100 kW (hard limit 105 kVA)
! Generator can serve all load with margin
! ========================================================================

Set voltagebases=[0.4]
Calcv
Solve